<div class="container my-2">
  <div class="card-body">
    <h1 class="text-center text-success">
      <span class="text-danger">
        <%=jobDetails.jobName %>
      </span> opportunity
      in <%=jobDetails.jobLocation %> ON-SITE at
        <span class="text-info">
          <%=jobDetails.companyName%>
        </span>
    </h1>


    <div class="container d-flex flex-column align-items-centre justify-content-start my-3">
      <h5 class="my-1">
        <%=jobDetails.companyName%>
      </h5>
      <div>
        <span>
          <%=jobDetails.jobType %>
        </span>
        <span class="text-success">
          <%=jobDetails.jobName %>
        </span>
      </div>
      <div class="d-flex flex-column align-items-centre justify-content-start p-2">
        <span class="">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-fill"
            viewBox="0 0 16 16">
            <path fill-rule="evenodd"
              d="M4 4a4 4 0 1 1 4.5 3.969V13.5a.5.5 0 0 1-1 0V7.97A4 4 0 0 1 4 3.999zm2.493 8.574a.5.5 0 0 1-.411.575c-.712.118-1.28.295-1.655.493a1.319 1.319 0 0 0-.37.265.301.301 0 0 0-.057.09V14l.002.008a.147.147 0 0 0 .016.033.617.617 0 0 0 .145.15c.165.13.435.27.813.395.751.25 1.82.414 3.024.414s2.273-.163 3.024-.414c.378-.126.648-.265.813-.395a.619.619 0 0 0 .146-.15.148.148 0 0 0 .015-.033L12 14v-.004a.301.301 0 0 0-.057-.09 1.318 1.318 0 0 0-.37-.264c-.376-.198-.943-.375-1.655-.493a.5.5 0 1 1 .164-.986c.77.127 1.452.328 1.957.594C12.5 13 13 13.4 13 14c0 .426-.26.752-.544.977-.29.228-.68.413-1.116.558-.878.293-2.059.465-3.34.465-1.281 0-2.462-.172-3.34-.465-.436-.145-.826-.33-1.116-.558C3.26 14.752 3 14.426 3 14c0-.599.5-1 .961-1.243.505-.266 1.187-.467 1.957-.594a.5.5 0 0 1 .575.411z">
            </path>
          </svg>
          <%=jobDetails.jobLocation %> On-Site
        </span>
        <span class="">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
            class="bi bi-currency-rupee" viewBox="0 0 16 16">
            <path
              d="M4 3.06h2.726c1.22 0 2.12.575 2.325 1.724H4v1.051h5.051C8.855 7.001 8 7.558 6.788 7.558H4v1.317L8.437 14h2.11L6.095 8.884h.855c2.316-.018 3.465-1.476 3.688-3.049H12V4.784h-1.345c-.08-.778-.357-1.335-.793-1.732H12V2H4v1.06Z">
            </path>
          </svg>
          <%=jobDetails.jobSalary %>/m
        </span>
        <span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
            class="bi bi-hourglass-split" viewBox="0 0 16 16">
            <path
              d="M2.5 15a.5.5 0 1 1 0-1h1v-1a4.5 4.5 0 0 1 2.557-4.06c.29-.139.443-.377.443-.59v-.7c0-.213-.154-.451-.443-.59A4.5 4.5 0 0 1 3.5 3V2h-1a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-1v1a4.5 4.5 0 0 1-2.557 4.06c-.29.139-.443.377-.443.59v.7c0 .213.154.451.443.59A4.5 4.5 0 0 1 12.5 13v1h1a.5.5 0 0 1 0 1h-11zm2-13v1c0 .537.12 1.045.337 1.5h6.326c.216-.455.337-.963.337-1.5V2h-7zm3 6.35c0 .701-.478 1.236-1.011 1.492A3.5 3.5 0 0 0 4.5 13s.866-1.299 3-1.48V8.35zm1 0v3.17c2.134.181 3 1.48 3 1.48a3.5 3.5 0 0 0-1.989-3.158C8.978 9.586 8.5 9.052 8.5 8.351z">
            </path>
          </svg>
          Apply By 30 Aug 2023
        </span>
        <span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
            class="bi bi-bar-chart-fill" viewBox="0 0 16 16">
            <path
              d="M1 11a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1v-3zm5-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1V2z">
            </path>
          </svg>
          Number of openings <%=jobDetails.jobOpening %></span>
        <a style="text-decoration: none; color: rgb(215, 20, 85)" href="applicants/<%=jobDetails.id%>">
          <span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
              class="bi bi-people-fill" viewBox="0 0 16 16">
              <path
                d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z">
              </path>
            </svg>
            Applicants <%=jobDetails.applicants %></span>
        </a>
      </div>

      <div class="container">
        <div class="skills p-1">
          <%jobDetails.skillRequired.forEach((skills=>{ %>
            <button class="btn btn-sm btn-outline-info" fdprocessedid="1ydzyi">
              <%=skills %>
            </button>
            <% })) %>

        </div>
        <hr>

        <% if(locals.userEmail) { %>
          <a href="/update/<%=jobDetails.id %>" class="btn btn-outline-warning">Edit</a>
          <a href="/delete/<%=jobDetails.id %>" class="btn btn-outline-danger">Delete</a>

          <% } else{ %>
            <button data-bs-toggle="modal" data-bs-target="#applyModal" class="btn btn-md btn-primary px-5 my-2"
              fdprocessedid="6cabs">
              Apply Now
            </button>
            <% } %>
      </div>
    </div>
    <!-- job posted -->
    <small class="text-body-secondary">
      <span style="width: 160px"
        class="bg-success text-white border border-success border border-success p-1 border-opacity-50 rounded">
        Posted: 3/15/2024, 6:18:15 AM
      </span></small>
    <!-- job posted -->
  </div>
</div>


<!-- Modal -->
<div class="modal" id="applyModal" tabindex="-1" style="color: black;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Apply in less than a minute</h5>

        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form method="post" action="/jobs/<%=jobDetails.id%>" enctype="multipart/form-data">
          <div class="mb-3">
            <input type="text" name="id" value="<%=jobDetails.id%>" style="display: none;">

            <label for="nameField" class="form-label">Name</label>
            <input type="text" name="name" class="form-control" id="nameField" aria-describedby="emailHelp">
          </div>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
          </div>
          <div class="mb-3">
            <label for="contactNumber" class="form-label">Contact Number</label>
            <input type="text" name="contactnumber" class="form-control" id="contactNumber">
          </div>
          <div class="mb-3">
            <label for="resume" class="form-label">Resume</label>
            <input type="file" name="resumeFile" class="form-control" id="resume" accept=".pdf">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>

        </form>
      </div>
    </div>
  </div>
</div>